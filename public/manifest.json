{
  "manifest_version": 3,
  "name": "ChatterPal - English Buddy",
  "version": "1.0.0",
  "description": "Your all-in-one Chrome extension for seamless online English learning, from script assistance to real-time aids and progress tracking.",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_title": "ChatterPal - English Buddy",
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["storage", "scripting"],
  "host_permissions": ["https://*/*"]
  // "options_page": "options.html",
  // "background": {
  //   "service_worker": "background.js"
  // }
}
